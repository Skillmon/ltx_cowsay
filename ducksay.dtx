  {
    \begin{tabular}{@{} #2 @{}}
      \int_step_inline:nn { \l_ducksay_strlen_int } { _ } \\
      #1\\[-1ex]
      \int_step_inline:nn { \l_ducksay_strlen_int } { { - } }
